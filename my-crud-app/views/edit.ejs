        :root {
            --primary-color: #56299A;
            --secondary-color: #7B42C3;
            --accent-color: #d9d9d9;
            --text-color: #333;
            --light-color: #fefee3;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            background-color: #f8f9fa;
        }
        
        .hero-section {
            background-color: var(--primary-color);
            color: white;
            padding: 2rem 0;
            margin-bottom: 3rem;
        }
        
        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        
        footer {
            background-color: var(--primary-color);
            color: white;
            padding: 2rem 0;
            margin-top: 4rem;
        }
        
        .calendar-container {
            max-width: 100%;
            margin: 0 auto;
        }
        
        .calendar-weekday {
            font-weight: bold;
            width: 14.28%;
            text-align: center;
            padding: 5px;
        }
        
        .calendar-days {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 5px;
        }
        
        .calendar-day {
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            cursor: default;
            font-weight: 500;
        }
        
        .calendar-day.available {
            background-color: var(--primary-color);
            color: white;
        }
        
        .calendar-day.other-month {
            color: #ccc;
        }
        
        .calendar-day.other-month.available {
            background-color: var(--secondary-color);
            color: white;
            opacity: 0.7;
        }
        
        .calendar-day.today {
            border: 2px solid var(--secondary-color);
        }
    </style>
</head>
