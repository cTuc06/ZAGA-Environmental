            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(86, 41, 154, 0.4);
        }
        
        .btn-light {
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .btn-light:hover {
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
