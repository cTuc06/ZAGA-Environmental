        :root {
            --primary-color: #56299A;
            --secondary-color: #7B42C3;
            --accent-color: #f0f0f0;
            --text-color: #333;
            --light-color: #fefee3;
            --box-shadow: 0 10px 30px rgba(86, 41, 154, 0.15);
