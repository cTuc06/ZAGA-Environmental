        .calendar-weekday {
            font-weight: bold;
            width: 14.28%;
            text-align: center;
            padding: 8px;
            color: var(--primary-color);
        }
        
        .calendar-days {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 8px;
        }
        
        .calendar-day {
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            cursor: default;
            font-weight: 500;
            transition: var(--transition);
            border: 1px solid transparent;
        }
        
        .calendar-day:hover {
            border-color: var(--primary-color);
        }
        
        .calendar-day.available {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            box-shadow: 0 3px 10px rgba(86, 41, 154, 0.2);
        }
        
        .calendar-day.other-month {
            color: #ccc;
        }
        
        .calendar-day.other-month.available {
            background: linear-gradient(135deg, var(--secondary-color) 0%, var(--primary-color) 100%);
            color: white;
            opacity: 0.7;
        }
        
        .calendar-day.today {
            border: 2px solid var(--secondary-color);
            box-shadow: 0 0 10px rgba(123, 66, 195, 0.3);
        }
        
        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 1rem;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
