    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Contact form submission
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const formStatus = document.getElementById('formStatus');
                    formStatus.innerHTML = '<div class="alert alert-info">Sending your message...</div>';
                    
                    const formData = {
                        name: document.getElementById('name').value,
                        email: document.getElementById('email').value,
                        subject: document.getElementById('subject').value,
                        message: document.getElementById('message').value
                    };
                    
                    fetch('/contact', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            formStatus.innerHTML = '<div class="alert alert-success">' + data.message + '</div>';
                            contactForm.reset();
                        } else {
                            formStatus.innerHTML = '<div class="alert alert-danger">' + data.message + '</div>';
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        formStatus.innerHTML = '<div class="alert alert-danger">An error occurred. Please try again later.</div>';
                    });
                });
            }
            
            // Email copy functionality
            function setupCopyButton(buttonId, textId) {
                const copyBtn = document.getElementById(buttonId);
                const emailText = document.getElementById(textId);
                
                if (copyBtn && emailText) {
                    copyBtn.addEventListener('click', function() {
                        // Create a temporary textarea element to copy the text
                        const textarea = document.createElement('textarea');
                        textarea.value = emailText.textContent;
                        document.body.appendChild(textarea);
                        textarea.select();
                        document.execCommand('copy');
                        document.body.removeChild(textarea);
                        
                        // Show feedback
                        const originalIcon = copyBtn.innerHTML;
                        copyBtn.innerHTML = '<i class="fas fa-check fa-sm"></i>';
                        copyBtn.style.background = '#28a745';
                        
                        // Reset after 2 seconds
                        setTimeout(function() {
                            copyBtn.innerHTML = originalIcon;
                            if (buttonId === 'copyEmailBtn') {
                                copyBtn.style.background = 'linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%)';
                            } else {
                                copyBtn.style.background = 'rgba(255, 255, 255, 0.1)';
                            }
                        }, 2000);
                    });
                }
            }
            
            // Setup both copy buttons
            setupCopyButton('copyEmailBtn', 'emailText');
            setupCopyButton('copyFooterEmailBtn', 'footerEmailText');
            
            // Track which days to highlight
            let highlightMode = 'tuesday-thursday'; // Default mode
            
            // Initialize the calendar when the modal is shown
            const signupModal = document.getElementById('signupModal');
            signupModal.addEventListener('show.bs.modal', function(event) {
                // Button that triggered the modal
                const button = event.relatedTarget;
                
                // Extract service info from data-* attributes
                const service = button.getAttribute('data-service');
                const days = button.getAttribute('data-days');
                
                // Update the modal title based on the service
                if (service) {
                    document.getElementById('signupModalLabel').innerHTML = 
                        `<i class="fas fa-calendar-alt me-2"></i>Available Consultation Days: ${service}`;
                    
                    // Update the Google Form link based on the service
                    const googleFormLink = document.getElementById('googleFormLink');
                    if (service === 'Environmental Consulting') {
                        googleFormLink.href = 'https://forms.gle/C1bup2dL2Xsqi3tE8';
                    } else if (service === 'Sustainable Solutions') {
                        googleFormLink.href = 'https://forms.gle/DFbrLrbW8sPS1uCt6';
                    }
                }
                
                // Set highlight mode based on the button clicked
                if (days === 'weekdays') {
                    highlightMode = 'weekdays';
                    document.querySelector('.calendar-legend-text').textContent = 'Available Days (Mon-Fri)';
                } else {
                    highlightMode = 'tuesday-thursday';
                    document.querySelector('.calendar-legend-text').textContent = 'Available Days (Tue & Thu)';
                }
                
                // Render the calendar with the appropriate highlighting
                renderCalendar();
            });
            
            function renderCalendar() {
                const today = new Date();
                const currentMonth = today.getMonth();
                const currentYear = today.getFullYear();
                
                // Set the month and year in the header
                const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                document.getElementById('currentMonthYear').textContent = `${monthNames[currentMonth]} ${currentYear}`;
                
                // Get the first day of the month
                const firstDay = new Date(currentYear, currentMonth, 1);
                const startingDay = firstDay.getDay(); // 0 = Sunday, 1 = Monday, etc.
                
                // Get the last day of the month
                const lastDay = new Date(currentYear, currentMonth + 1, 0);
                const totalDays = lastDay.getDate();
                
                // Get the last day of the previous month
                const prevMonthLastDay = new Date(currentYear, currentMonth, 0).getDate();
                
                // Calculate total cells needed (previous month days + current month days + next month days)
                const totalCells = Math.ceil((startingDay + totalDays) / 7) * 7;
                
                // Clear previous calendar
                const calendarDays = document.getElementById('calendarDays');
                calendarDays.innerHTML = '';
                
                // Add days from previous month
                for (let i = 0; i < startingDay; i++) {
                    const day = prevMonthLastDay - startingDay + i + 1;
                    const dayElement = document.createElement('div');
                    dayElement.className = 'calendar-day other-month';
                    dayElement.textContent = day;
                    calendarDays.appendChild(dayElement);
                }
                
                // Add days from current month
                for (let i = 1; i <= totalDays; i++) {
                    const date = new Date(currentYear, currentMonth, i);
                    const dayOfWeek = date.getDay();
                    
                    const dayElement = document.createElement('div');
                    dayElement.className = 'calendar-day';
                    dayElement.textContent = i;
                    
                    // Check if it's today
                    if (date.getDate() === today.getDate() && 
                        date.getMonth() === today.getMonth() && 
                        date.getFullYear() === today.getFullYear()) {
                        dayElement.classList.add('today');
                    }
                    
                    // Highlight days based on the selected mode
                    if (highlightMode === 'tuesday-thursday') {
                        // Tuesday (2) or Thursday (4)
                        if (dayOfWeek === 2 || dayOfWeek === 4) {
                            // Only highlight days that are not in the past
                            if (date >= today) {
                                dayElement.classList.add('available');
                            }
                        }
                    } else if (highlightMode === 'weekdays') {
                        // Monday (1) through Friday (5)
                        if (dayOfWeek >= 1 && dayOfWeek <= 5) {
                            // Only highlight days that are not in the past
                            if (date >= today) {
                                dayElement.classList.add('available');
                            }
                        }
                    }
                    
                    calendarDays.appendChild(dayElement);
                }
                
                // Add days from next month
                const remainingCells = totalCells - (startingDay + totalDays);
                for (let i = 1; i <= remainingCells; i++) {
                    const date = new Date(currentYear, currentMonth + 1, i);
                    const dayOfWeek = date.getDay();
                    
                    const dayElement = document.createElement('div');
                    dayElement.className = 'calendar-day other-month';
                    dayElement.textContent = i;
                    
                    // Highlight days in next month based on the selected mode
                    if (highlightMode === 'tuesday-thursday') {
                        // Tuesday (2) or Thursday (4)
                        if (dayOfWeek === 2 || dayOfWeek === 4) {
                            dayElement.classList.add('available');
                        }
                    } else if (highlightMode === 'weekdays') {
                        // Monday (1) through Friday (5)
                        if (dayOfWeek >= 1 && dayOfWeek <= 5) {
                            dayElement.classList.add('available');
                        }
                    }
                    
                    calendarDays.appendChild(dayElement);
                }
            }
        });
